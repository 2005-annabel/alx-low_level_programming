C = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c, %.o, $(SRC))
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	        $(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	        $(RM) *~ $(NAME)

oclean:
	        $(RM) $(OBJ)

fclean: clean oclean

re: fclean all
